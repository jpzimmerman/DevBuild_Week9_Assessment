@model DevBuild.Assessment6_WebForm.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Identity", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>LoginModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <fieldset>
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "" })
                @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset>
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "" })
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </fieldset>
        </div>

        <div class="form-group">
            <div class="">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}
